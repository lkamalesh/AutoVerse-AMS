@model VehicleViewModel

<h2 style="font-family:verdana" >@Model.Model - Details</h2>
<div class="card p-3">
    <div class="row">
        <div class="col-md-4 d-flex justify-content-center align-items-center bg-white">
            <img src="@Model.ImageUrl" class="img-fluid rounded" />
        </div>
        <div class="col-md-8" style="font-family:verdana">
            <h4><strong>Brand:</strong> @Model.BrandName</h4>
            <p><strong>Ratings:</strong> @Model.Rating ⭐</p>
            <p><strong>Base Model Price:</strong> $@Model.BaseModelPrice</p>
            <p><strong>Top Model Price:</strong> $@Model.TopModelPrice</p>
            <p><strong>Body Type:</strong>@Model.BodyType</p>
            <p><strong>Engine:</strong> @Model.Engine</p>
            <p><strong>Fuel Type:</strong> @Model.FuelType</p>
            <p><strong>Transmission:</strong> @Model.Transmission</p>
            <p><strong>Mileage:</strong> @Model.Mileage km/l</p>
            <p><strong>Top Speed:</strong> @Model.TopSpeed km/h</p>
            <p><strong>Seating:</strong> @Model.SeatingCapacity</p>
        </div>
    </div>
</div>

<form asp-controller="Rating" asp-action="AddRating" method="post" class="mt-3" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <input type="hidden" name="vehicleId" value="@Model.Id" />
    <label>Select Rating (1–5):</label>
    <select name="value" class="form-select" required>
        @for (int i = 1; i <= 5; i++)
        {
            <option value="@i">@i</option>
        }
    </select>
    <button type="submit" class="btn btn-primary mt-2">Submit Rating</button>
</form>
