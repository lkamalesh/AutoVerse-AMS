@model Vehicle

<h2 class="mb-3 text-danger" style="font-family:verdana">Delete Vehicle</h2>

<div class="card p-4 shadow-sm">
    <h4 >Are you sure you want to delete this vehicle?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Model</dt>
        <dd class="col-sm-9">@Model.Model</dd>

        <dt class="col-sm-3">Brand</dt>
        <dd class="col-sm-9">@Model.Brand?.Name</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">₹@Model.BaseModelPrice</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" asp-antiforgery="true">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
