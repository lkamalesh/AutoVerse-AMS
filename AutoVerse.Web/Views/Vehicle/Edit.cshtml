@model AutoVerse.Core.Entities.Vehicle

<h2 class="mb-3 text-center" style="font-family:verdana">Edit Vehicle</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" class="card p-4 shadow-sm" asp-antiforgery="true">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BrandId" class="form-label">Brand</label>
        <select asp-for="BrandId" class="form-select" asp-items="@(new SelectList(ViewBag.Brands, "Id", "Name"))">
            <option value="">-- Select Brand --</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="VehicleType.TypeName" class="form-label">Body Type</label>
        <input asp-for="VehicleType.TypeName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="BaseModelPrice" class="form-label"></label>
        <input asp-for="BaseModelPrice" class="form-control" />
        <span asp-validation-for="BaseModelPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TopModelPrice" class="form-label"></label>
        <input asp-for="TopModelPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Engine" class="form-label"></label>
        <input asp-for="Engine" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="FuelType" class="form-label"></label>
        <input asp-for="FuelType" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Transmission" class="form-label"></label>
        <input asp-for="Transmission" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TopSpeed" class="form-label"></label>
        <input asp-for="TopSpeed" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SeatingCapacity" class="form-label"></label>
        <input asp-for="SeatingCapacity" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Imageurl" class="form-label"></label>
        <input asp-for="Imageurl" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Change Image (Optional)</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
    </div>

    <button type="submit" class="btn btn-primary w-100">Update Vehicle</button>
</form>

